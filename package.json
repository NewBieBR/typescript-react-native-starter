{
  "name": "typescript-react-native-starter",
  "version": "0.0.3",
  "private": false,
  "description": "A Typescript React Native boilerplate to start your project quickly",
  "author": "Hung Arthur Dao <arthur_dao@icloud.com>",
  "license": "MIT",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:ios": "open ./ios/*.xcworkspace && yarn start",
    "open:ios": "open ./ios/*.xcworkspace",
    "open:android": "open -a '/Applications/Android Studio.app'",
    "start:android": "open -a '/Applications/Android Studio.app' ./android && yarn start",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "codecov": "jest --verbose --coverage && ./node_modules/.bin/codecov --token=176f4867-f830-40ec-a536-90e7b611d713",
    "lint": "tslint --project tsconfig.json -q -e \"coverage/**\"",
    "rename": "react-native-rename",
    "jetify": "npx jetify",
    "icon": "npx app-icon generate -i publishing/icon.png",
    "setup": "./bin/install.sh $1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn codecov"
    }
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.7.1",
    "@react-native-community/masked-view": "^0.1.6",
    "@react-navigation/bottom-tabs": "^5.0.7",
    "@react-navigation/native": "^5.0.7",
    "@react-navigation/stack": "^5.0.8",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/react-redux": "^7.1.5",
    "@types/redux-persist": "^4.3.1",
    "autobind-decorator": "^2.4.0",
    "react": "16.12.0",
    "react-native": "0.61.5",
    "react-native-easy-icon": "^1.0.2",
    "react-native-gesture-handler": "^1.6.0",
    "react-native-localization": "^2.1.6",
    "react-native-normalize": "^1.0.1",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.0.0-beta.10",
    "react-native-vector-icons": "^6.6.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.1",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.1.3",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/runtime": "^7.7.7",
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/jest": "^24.0.24",
    "@types/react": "^16.9.17",
    "@types/react-native": "^0.60.25",
    "@types/react-test-renderer": "^16.9.1",
    "app-icon": "^0.13.1",
    "babel-jest": "^24.9.0",
    "codecov": "^3.6.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jetifier": "^1.6.5",
    "metro-react-native-babel-preset": "^0.57.0",
    "react-dom": "^16.12.0",
    "react-native-rename": "^2.4.1",
    "react-native-testing-library": "^1.12.0",
    "react-test-renderer": "16.12.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,tsx}",
      "!**/coverage/**",
      "!**/node_modules/**",
      "!**/babel.config.js",
      "!**/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-native-localization|react-navigation)"
    ],
    "setupFiles": [
      "<rootDir>/jest-setup.js"
    ]
  }
}
